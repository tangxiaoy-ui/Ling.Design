    "dev": "tsup --watch"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@ling-design/config": "file:../../config",
    "@ling-design/utils": "file:../../utils",
    "@radix-ui/react-slot": "^1.0.0",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.4.19",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0"
  }
}

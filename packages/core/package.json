{
  "name": "@ling-design/core",
  "version": "0.0.1",
  "private": false,
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./styles.css": "./dist/styles.css",
    "./icons": "./src/components/icons/index.tsx",
    "./src/components/icons/meta": "./src/components/icons/meta.ts"
  },
  "scripts": {
    "build": "tsup && pnpm run build:css",
